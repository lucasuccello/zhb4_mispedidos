<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns="sap.m"
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:u="sap.ui.unified" xmlns:html="sap.ui.core.HTML"
	xmlns:uxap="sap.uxap" height="100%" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:tnt="sap.tnt" controllerName="hb4.zhb4_mispedidos.controller.Componentes">
	<Page showHeader="true" showNavButton="true" navButtonPress="action">
		<uxap:ObjectPageLayout id="ObjectPageLayout">
			<uxap:headerTitle>
				<uxap:ObjectPageDynamicHeaderTitle>
					<uxap:expandedHeading>
						<Title text="Lote {nombre}" wrapping="true"/>
					</uxap:expandedHeading>
					<uxap:snappedHeading>
						<FlexBox fitContainer="true" alignItems="Center">
							<Avatar src="sap-icon://e-care" class="sapUiTinyMarginEnd" backgroundColor="Random"/>
							<Title text="Lote {nombre}" wrapping="true"/>
						</FlexBox>
					</uxap:snappedHeading>
				</uxap:ObjectPageDynamicHeaderTitle>
			</uxap:headerTitle>
			<uxap:headerContent>
				<HBox wrap="Wrap">
					<Avatar class="sapUiSmallMarginEnd" src="sap-icon://e-care" displaySize="L"/>
					<VBox class="sapUiLargeMarginEnd">
						<HBox class="sapUiTinyMarginBottom">
                            <tnt:InfoLabel text="{cultivo}" displayOnly="true" colorScheme="{path: 'cultivo', formatter: '.formatter.colorTipoCultivo' }" />
						</HBox>
						<HBox class="sapUiTinyMarginBottom">
							<ObjectStatus title="{i18n>tableVariedadColumnTitle}" text="{variedad}"/>
						</HBox>
						<HBox class="sapUiTinyMarginBottom">
							<ObjectStatus title="{i18n>tableUbicacionColumnTitle}" text="{provincia} - {localidad}"/>
						</HBox>
                        <HBox class="sapUiTinyMarginBottom">
							<ObjectStatus title="{i18n>tableHaColumnTitle}" text="{ha}"/>
						</HBox>
					</VBox>
                    <VBox class="sapUiLargeMarginEnd">
						<HBox class="sapUiTinyMarginBottom" direction="Column">
							<Label text="{i18n>tableFEntregaMColumnTitle}" design="Bold" class="sapUiTinyMarginEnd"/>
							<ObjectStatus id="_fechaMaxima" text="{fechaEntrega}" state="Error" class="sapMObjectStatusLarge"/>
						</HBox>
					</VBox>                 
                    <VBox class="sapUiLargeMarginEnd">
						<HBox class="sapUiTinyMarginBottom" direction="Column">
							<Label text="{i18n>tableRindeColumnTitle}" design="Bold" class="sapUiTinyMarginEnd"/>
							<ObjectStatus text="{ parts: [ {path: 'rindeEsperado'}, {path: 'cultivo'} ], formatter: '.formatter.formatearMonto' } Kg/Ha" class="sapMObjectStatusLarge"/>
						</HBox>
					</VBox>    
                    <VBox class="sapUiLargeMarginEnd">
						<HBox class="sapUiTinyMarginBottom" direction="Column">
							<Label text="{i18n>tableAporteAColumnTitle}" design="Bold" class="sapUiTinyMarginEnd"/>
							<ObjectStatus text="{ parts: [ {path: 'aporteActual'}, {path: 'cultivo'} ], formatter: '.formatter.formatearMonto' } Kg/Ha" state="Success" class="sapMObjectStatusLarge"/>
                        </HBox>
					</VBox>      
					<VBox class="sapUiLargeMarginEnd">
						<HBox class="sapUiTinyMarginBottom" direction="Column">
							<Label text="Estado Actual:" design="Bold" class="sapUiTinyMarginEnd"/>
							<ObjectStatus text="{ parts: [ {path: 'estado'} ], formatter: '.formatter.textoStatus' }"
								state="{ parts: [ {path: 'estado'} ], formatter: '.formatter.highlightStatus' }" class="sapMObjectStatusLarge"/>
						</HBox>
					</VBox>
				</HBox>
			</uxap:headerContent>
			<uxap:sections>
				<uxap:ObjectPageSection title="{i18n>componentes}">
					<uxap:subSections>
						<uxap:ObjectPageSubSection>
							<uxap:blocks>
								<Table id="tableItems" items="{Componentes>/}" alternateRowColors="true" noDataText="{i18n>sinComponentes}" fixedLayout="false">
									<headerToolbar>
										<OverflowToolbar>
											<content>
												<ToolbarSpacer/>
												<Button icon="sap-icon://add" text="Agregar Insumo" type="Transparent" press="onAgregar"
													visible="{ parts: [ {path: 'estado'} ], formatter: '.formatter.visibleBotoneraComp' }"/>
												<Button type="Transparent" icon="sap-icon://appointment" press="onModificarFechaComponentes" tooltip="Modificar Fecha de Entrega"
													visible="{ parts: [ {path: 'estado'} ], formatter: '.formatter.visibleBotoneraComp' }"/>
											</content>
										</OverflowToolbar>
									</headerToolbar>
									<columns>
										<Column width="1rem" demandPopin="true" minScreenWidth="Tablet">
											<header>
												<Label text=""/>
											</header>
										</Column>
										<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Left">
											<header>
												<Label text="{i18n>componente}"/>
											</header>
										</Column>
										<Column hAlign="Center" demandPopin="true" minScreenWidth="Tablet">
											<header>
												<Label text="{i18n>fechaEntrega}"/>
											</header>
										</Column>
										<Column hAlign="Center" demandPopin="true" minScreenWidth="Tablet">
											<header>
												<Label text="{i18n>cantActual}"/>
											</header>
										</Column>
										<Column hAlign="Center" width="15rem" demandPopin="true" minScreenWidth="Tablet" visible="false">
											<header>
												<Label text="{i18n>aPedir}"/>
											</header>
										</Column>
										<Column hAlign="Center" demandPopin="true" minScreenWidth="Tablet">
											<header>
												<Label text=" "/>
											</header>
										</Column>
									</columns>
									<items>
										<ColumnListItem>
											<cells>
												<sap.ui.core:Icon xmlns:sap.ui.core="sap.ui.core" src="sap-icon://add-product"/>
												<ObjectIdentifier text="{Componentes>material}"/>
												<Text text="{Componentes>fechaEntrega}"/>
												<Text text="{ parts: [ {path: 'Componentes>cantidadActual'}, {path: 'Componentes>um'} ], formatter: '.formatter.formatearMonto' } {path: 'Componentes>um'}"/>
												<Input value="{ parts: [ {path: 'Componentes>cantidadPedi'}, {path: 'Componentes>um'} ], formatter: '.formatter.formatearMonto' }" type="Number" visible="false"/>
												<FlexBox alignItems="Start" justifyContent="Center" visible="{ parts: [ {path: 'estado'} ], formatter: '.formatter.visibleBotoneraComp' }">
													<Button type="Critical" icon="sap-icon://cart-2" press="onDisminuir" tooltip="Disminuir Insumo"
														visible="{ parts: [ {path: 'Componentes>esDisminuible'} ], formatter: '.formatter.visibleBotonSacar' }"/>
													<Button type="Reject" icon="sap-icon://delete" press="onAnular" tooltip="Solicitar eliminación de Insumo"
														visible="{ parts: [ {path: 'Componentes>esBorrable'} ], formatter: '.formatter.visibleBotonBorrar' }"/>
												</FlexBox>
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</uxap:blocks>
						</uxap:ObjectPageSubSection>
					</uxap:subSections>
				</uxap:ObjectPageSection>
				<uxap:ObjectPageSection title="{i18n>enmiendas}">
					<uxap:subSections>
						<uxap:ObjectPageSubSection>
							<uxap:blocks>
                                <HBox direction="Column">
                                    <Table noDataText="{i18n>sinAnexos}" id="__tblEnmiendas" alternateRowColors="true" items="{Anexos>/Datos}" fixedLayout="false">
                                        <items>
                                            <ColumnListItem>
                                                <cells>
                                                    <core:Icon src="{Anexos>Icono}" tooltip="{Anexos>Extension}"/>
                                                    <ObjectAttribute text="{Anexos>NombreArchivo}" active="true" press="onObtenerAnexo"/>
                                                    <Text text="{Anexos>Creador}"/>
                                                    <Text text="{Anexos>FechaCreacion}"/>
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                        <columns>
                                            <Column demandPopin="true" hAlign="Left" minScreenWidth="Tablet" width="10px">
                                                <header>
                                                    <Label text=""/>
                                                </header>
                                            </Column>
                                            <Column demandPopin="true" hAlign="Left" minScreenWidth="Tablet">
                                                <header>
                                                    <Label text="Anexo"/>
                                                </header>
                                            </Column>
                                            <Column demandPopin="true" minScreenWidth="Tablet">
                                                <header>
                                                    <Label text="Usuario creador"/>
                                                </header>
                                            </Column>
                                            <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                                                <header>
                                                    <Label text="Fecha creación"/>
                                                </header>
                                            </Column>
                                        </columns>
                                    </Table>
                                    <core:HTML id="framePDF" width="100%"/>
                                </HBox>
                            </uxap:blocks>
						</uxap:ObjectPageSubSection>
					</uxap:subSections>
				</uxap:ObjectPageSection>
                <uxap:ObjectPageSection title="{i18n>titSiembra}">
					<uxap:subSections>
						<uxap:ObjectPageSubSection>
							<uxap:blocks>
                            <Table id="_idTableSiembra" width="100%" items="{ path: 'Siembra>/'}" noDataText="Sin datos" headerText="Campos">
                                <columns>
                                    <Column id="idCampoColumna">
                                        <Text text="{i18n>idCampoColumnTitle}" />
                                    </Column>
                                    <Column id="idFechaSiembraColumna">
                                        <Text text="{i18n>idFechaSembradaColumnTitle}" />
                                    </Column>
                                    <Column id="idHaOrigColumna">
                                        <Text text="{i18n>haOrigColumnTitle}" />
                                    </Column>
                                    <Column id="idHaNuevasColumna">
                                        <Text text="{i18n>haNuevaColumnTitle}" />
                                    </Column>
                                    <Column id="idSurcoColumna">
                                        <Text text="{i18n>idSurcoColumnTitle}" />
                                    </Column>
                                    <Column id="idCoordOrigColumna">
                                        <Text text="{i18n>coordOrigColumnTitle}" />
                                    </Column>
                                    <Column id="idCoordNuevaColumna">
                                        <Text text="{i18n>coordNuevaColumnTitle}" />
                                    </Column>                                                                       
                                    
                                    <Column id="idPurgaSembradaColumna">
                                        <Text text="{i18n>idPurgaSembradaColumnTitle}" />
                                    </Column>
                                    <Column id="idHaPurgaColumna">
                                        <Text text="{i18n>haPurgaColumnTitle}" />
                                    </Column>
                                    <Column id="idDensidadColumna">
                                        <Text text="{i18n>idDensidadColumnTitle}" />
                                    </Column>
                                    <Column id="idCoordPurgaColumna">
                                        <Text text="{i18n>coordPurgaColumnTitle}" />
                                    </Column>

                                    <Column id="idFechaCosechaColumna">
                                        <Text text="{i18n>idFechaCosechaColumnTitle}" />
                                    </Column>
                                    <Column id="idDensidadCosechaColumna">
                                        <Text text="{i18n>idDensidadCosechaColumnTitle}" />
                                    </Column>
                                    <Column id="idRindeLoeColumna">
                                        <Text text="{i18n>idRindeLoteColumnTitle}" />
                                    </Column>
                                    <Column id="idSuperficieColumna">
                                        <Text text="{i18n>SuperficieColumnTitle}" />
                                    </Column>
                                    <Column id="idHumedadColumna">
                                        <Text text="{i18n>HumedadColumnTitle}" />
                                    </Column>
                                    
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{Siembra>Campo}" />
                                            <Text text="{Siembra>FechaSiembra}" />
                                            <Text text="{Siembra>HaOriginales}" />
                                            <Text text="{Siembra>HaNuevas}" />
                                            <Text text="{Siembra>Surco}" />
                                            <Button press="onMostrarCOriginal" icon="sap-icon://map-2"></Button>
                                            <Button press="onMostrarCNueva" icon="sap-icon://map-2"></Button>

                                            <Text text="{Siembra>PurgaSembrada}" />
                                            <Text text="{Siembra>HaPurga}" />
                                            <Text text="{Siembra>DensidadPurga}" />
                                            <Button press="onMostrarCPurga" icon="sap-icon://map"></Button>

                                            <Text text="{Siembra>FechaCosecha}" />
                                            <Text text="{Siembra>Densidad}" />
                                            <Text text="{Siembra>RindeLote}" />
                                            <Text text="{Siembra>SuperficieCosechada}" />
                                            <Text text="{Siembra>HumedadSemilla}" />
                                            
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
							</uxap:blocks>
						</uxap:ObjectPageSubSection>
					</uxap:subSections>
				</uxap:ObjectPageSection>
                <uxap:ObjectPageSection title="{i18n>titPulverizaciones}">
					<uxap:subSections>
						<uxap:ObjectPageSubSection>
							<uxap:blocks>
								<Table id="tablaPulv" width="auto" items="{ path : 'modelPulverizaciones>/', sorter: { path: 'NroPulv' }}" noDataText="{i18n>tableNoDataTextPulv}"
                                    updateFinished=".onUpdateFinished" alternateRowColors="true">
                                    <headerToolbar>
                                        <OverflowToolbar>
                                            <content>
                                                <ToolbarSpacer />
                                                <Button id="_buttonNuevaPulv" icon="sap-icon://add" text="{i18n>txtBotonAddPulv}" press="onNavegarLabores"/>
                                            </content>
                                        </OverflowToolbar>
                                    </headerToolbar>
                                    <columns>
                                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
                                            <Text text="{i18n>clmNroPulv}"/>
                                        </Column>
                                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
                                            <Text text="{i18n>clmFechaPulv}"/>
                                        </Column>
                                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
                                            <Text text="{i18n>clmSuperficiePulv}"/>
                                        </Column>
                                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left" width="25rem">
                                            <Text text="{i18n>clmObservacionesPulv}"/>
                                        </Column>
                                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
                                            <Text text="{i18n>clmProductosPulv}"/>
                                        </Column>
                                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left" width="7rem">
                                            <Text text=""/>
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem>
                                            <cells>
                                                <ObjectIdentifier title="{modelPulverizaciones>NroPulv}"/>
                                                <ObjectAttribute text="{ path:'modelPulverizaciones>Fecha', type: 'sap.ui.model.type.Date', formatOptions: { UTC:true, pattern: 'dd/MM/yyyy', source : {  pattern : 'dd/MM/yyyy' } } }"/>
                                                <ObjectNumber number="{modelPulverizaciones>Superficie}" unit="Ha"/>
                                                <ObjectAttribute text="{modelPulverizaciones>Observaciones}"/>
                                                <Button icon="sap-icon://show" press="onVerProdsPulv" type="Ghost" tooltip="{i18n>tltpBtnProductos}" text="{i18n>txtBtnProductos}"/>
                                                <FlexBox alignItems="Start" justifyContent="Center">
                                                    <Button press="onEditarPulv" type="Ghost" icon="sap-icon://edit" tooltip="{i18n>tltpBtnEditPulv}"/>
                                                </FlexBox>
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
							</uxap:blocks>
						</uxap:ObjectPageSubSection>
					</uxap:subSections>
				</uxap:ObjectPageSection>
                <uxap:ObjectPageSection title="{i18n>titFertilizacion}">
					<uxap:subSections>
						<uxap:ObjectPageSubSection>
							<uxap:blocks>
                                <Table id="tablaFert" width="auto" items="{ path : 'modelFertilizaciones>/', sorter: { path: 'NroFert' }}" noDataText="{i18n>tableNoDataTextFert}"
                                    updateFinished=".onUpdateFinished" alternateRowColors="true">
                                    <headerToolbar>
                                        <OverflowToolbar>
                                            <content>
                                                <ToolbarSpacer />
                                                <Button id="_buttonNuevaFert" icon="sap-icon://add" text="{i18n>txtBotonAddFert}" press="onNavegarLabores"/>
                                            </content>
                                        </OverflowToolbar>
                                    </headerToolbar>
                                    <columns>
                                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
                                            <Text text="{i18n>clmNroFert}"/>
                                        </Column>
                                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
                                            <Text text="{i18n>clmFechaFert}"/>
                                        </Column>
                                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
                                            <Text text="{i18n>clmSuperficieFert}"/>
                                        </Column>
                                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
                                            <Text text="{i18n>clmTipoPulv}"/>
                                        </Column>
                                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left" width="25rem">
                                            <Text text="{i18n>clmObservacionesFert}"/>
                                        </Column>
                                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
                                            <Text text="{i18n>clmProductosFert}"/>
                                        </Column>
                                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left" width="7rem">
                                            <Text text=""/>
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem>
                                            <cells>
                                                <ObjectIdentifier title="{modelFertilizaciones>NroFert}"/>
                                                <ObjectAttribute text="{ path:'modelFertilizaciones>Fecha', type: 'sap.ui.model.type.Date', formatOptions: { UTC:true, pattern: 'dd/MM/yyyy', source : {  pattern : 'dd/MM/yyyy' } } }"/>
                                                <ObjectNumber number="{modelFertilizaciones>Superficie}" unit="Ha"/>
                                                <ObjectAttribute text="{modelFertilizaciones>DescTipo}"/>
                                                <ObjectAttribute text="{modelFertilizaciones>Observaciones}"/>
                                                <Button icon="sap-icon://show" press="onVerProdsFert" type="Ghost" tooltip="{i18n>tltpBtnProductos}" text="{i18n>txtBtnProductos}"/>
                                                <FlexBox alignItems="Start" justifyContent="Center">
                                                    <Button press="onEditarFert" type="Ghost" icon="sap-icon://edit" tooltip="{i18n>tltpBtnEditFert}"/>
                                                </FlexBox>
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
							</uxap:blocks>
						</uxap:ObjectPageSubSection>
					</uxap:subSections>
				</uxap:ObjectPageSection>
                <uxap:ObjectPageSection title="{i18n>titFenologia}">
					<uxap:subSections>
						<uxap:ObjectPageSubSection>
							<uxap:blocks>
                                <VBox>
                                    <VBox justifyContent="End" alignItems="End">
                                        <Button icon="sap-icon://edit" text="{i18n>txtBtnEditFen}" press="onEditarFenolog" visible="{= ${modelAddFenolog>/editarFenolog} === false}"></Button>
                                    </VBox>
                                    <!-- vista para TRIGO -->
                                    <VBox class="sapUiSmallMargin" width="100%" visible="{modelAddFenolog>/cargarFenTR}">
                                        <HBox alignItems="Center" justifyContent="Center">
                                            <tnt:InfoLabel text="{i18n>txtTrigo}" displayOnly="true" colorScheme="1" class="sapUiSmallMarginTop sapUiSmallMarginEnd"/>
                                            <VBox class="sapUiMediumMarginEnd">
                                                <Label text="{i18n>lblEmergencia}:"/>
                                                <DatePicker id="_fechaEmergenciaTrigo" displayFormat="dd/MM/yyyy" enabled="{modelAddFenolog>/editarFenolog}"/>
                                            </VBox>
                                            <VBox class="sapUiMediumMarginEnd">
                                                <Label text="{i18n>lblAntesis}:"/>
                                                <DatePicker id="_fechaAntesisTrigo" displayFormat="dd/MM/yyyy" enabled="{modelAddFenolog>/editarFenolog}"/>
                                            </VBox>
                                            <VBox>
                                                <Label text="{i18n>lblMadurez}:"/>
                                                <DatePicker id="_fechaMadurezTrigo" displayFormat="dd/MM/yyyy" enabled="{modelAddFenolog>/editarFenolog}"/>
                                            </VBox>
                                        </HBox>
                                    </VBox>
                                    <!-- vista para SOJA -->
                                    <VBox class="sapUiSmallMargin" width="100%" visible="{modelAddFenolog>/cargarFenSO}">
                                        <HBox alignItems="Center" justifyContent="Center">
                                            <tnt:InfoLabel text="{i18n>txtSoja}" displayOnly="true" colorScheme="7" class="sapUiSmallMarginTop sapUiSmallMarginEnd"/>
                                            <VBox class="sapUiMediumMarginEnd">
                                                <Label text="{i18n>lblEmergencia}:"/>
                                                <DatePicker id="_fechaEmergenciaSoja" displayFormat="dd/MM/yyyy" enabled="{modelAddFenolog>/editarFenolog}"/>
                                            </VBox>
                                            <VBox class="sapUiMediumMarginEnd">
                                                <Label text="{i18n>lblR5}:"/>
                                                <DatePicker id="_fechaR5Soja" displayFormat="dd/MM/yyyy" enabled="{modelAddFenolog>/editarFenolog}"/>
                                            </VBox>
                                            <VBox>
                                                <Label text="{i18n>lblR8}:"/>
                                                <DatePicker id="_fechaR8Soja" displayFormat="dd/MM/yyyy" enabled="{modelAddFenolog>/editarFenolog}"/>
                                            </VBox>
                                        </HBox>
                                    </VBox>
                                    <HBox justifyContent="End" visible="{modelAddFenolog>/editarFenolog}">
                                        <Button type="Ghost" text="{i18n>txtBtnCancel}" class="sapUiTinyMarginEnd" press="onCancelarFenolog"/>
                                        <Button type="Emphasized" text="{i18n>txtBtnSave}" press="onGuardarFenolog"/>
                                    </HBox>
                                </VBox>
							</uxap:blocks>
						</uxap:ObjectPageSubSection>
					</uxap:subSections>
				</uxap:ObjectPageSection>
                <uxap:ObjectPageSection title="Lluvias">
					<uxap:subSections>
						<uxap:ObjectPageSubSection>
							<uxap:blocks>
                                <VBox>
                                    <Panel backgroundDesign="Transparent" visible="{= ${modelLluvia>/mostrarLluvias} === false}" width="auto" class="sapUiResponsiveMargin">
                                        <headerToolbar>
                                            <OverflowToolbar>
                                                <ToolbarSpacer />
                                                <Button id="_buttonNuevaLluv2" icon="sap-icon://add" text="Nueva Lluvia" press="onNavegarLabores"/>
                                            </OverflowToolbar>
                                        </headerToolbar>
                                        <content>
                                            <MessageStrip
                                                text="No se cargaron datos de lluvias para este lote."
                                                showIcon="true"
                                                type="Warning"
                                                class="sapUiMediumMarginBeginEnd sapUiMediumMarginTop"/>
                                        </content>
                                    </Panel>
                                    <VBox visible="{modelLluvia>/mostrarLluvias}">
                                        <MessageStrip
                                            text="Cargue los milimetros de lluvia cargados por día. Solo se guardarán aquellos que tengan una cantidad mayor a 0, los demás seran eliminados."
                                            visible="{modelLluvia>/isEdit}"
                                            showIcon="true"
                                            class="sapUiTinyMargin"/>
                                        <Table id="tableLluv" width="100%" items="{ path : 'modelLluvia>/Lluvias' }" sticky="ColumnHeaders"
                                            busyIndicatorDelay="0" growing="false" alternateRowColors="true"
                                            growingThreshold="10" growingTriggerText="ver más...">
                                            <headerToolbar>
                                                <OverflowToolbar>
                                                    <content>
                                                        <ToolbarSpacer />
                                                        <Button visible="{= ${modelLluvia>/isEdit} === false}" class="sapUiTinyMarginEnd" id="_buttonEditarLluv" icon="sap-icon://edit" text="Editar Lluvia" press="onEditarLluv"/>
